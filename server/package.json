        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-session": "^1.17.2",
        "helmet": "^5.0.2",
        "http-status": "^1.5.0",
        "mongoose": "^6.2.3",
        "morgan": "^1.10.0",
        "node-mocks-http": "^1.11.0",
        "redis": "^4.0.4",
        "validator": "^13.7.0",
        "winston": "^3.3.3",
        "types": "*"
    },
    "devDependencies": {
        "@types/connect-redis": "^0.0.18",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.12",
        "@types/morgan": "^1.9.3",
        "@types/node": "^15.12.2",
        "@types/validator": "^13.7.1",
