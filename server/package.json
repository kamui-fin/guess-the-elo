        "eslint": "^7.28.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "ts-node": "^10.6.0",
